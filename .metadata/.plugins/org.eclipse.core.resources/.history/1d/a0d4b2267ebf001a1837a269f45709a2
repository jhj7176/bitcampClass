<?xml version="1.0" encoding="UTF-8"?>

	<taskdef resource = "net / sf / antcontrib / antlib.xml">
	  <classpath>
	    <pathelement location = "$ {antcontrib}"/>
	  </ classpath>
	</ taskdef>

<project name="web01" default="Tomcat" basedir=".">

	<description>testbuild.xml</description>

	  	
	<property name="targetServer" value="C:\tomcat\webapps" />
	<property name="tomcat.home" value="C:\tomcat" />
	<property name="classDir" value="C:\Workspace\web01\build" />
	<property name="app.name" value="web01" />
	<property name="app.path" value="/${app.name}" />
	<property name="build.home" value="${basedir}/build" />
	<property name="dist.home" value="${basedir}/dist" />
	<property name="src.home" value="${basedir}/src" />
	<property name="docs.home" value="${docsdir}/docs" />
	<property name="web.home" value="${basedir}/WebContent" />

	<property file="${web.home}/server.properties" />


	<path id="project.classpath">
		<fileset dir="${tomcat.home}/lib">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${web.home}/WEB-INF/lib">
			<include name="*.jar">
			</include>
		</fileset>
		<fileset dir="${ant.home}/lib" />
	</path>

	<target name="delete">
		<delete dir="${build.home}">
		</delete>
		<delete dir="${dist.home}">
		</delete>
	</target>

	<target name="create" depends="delete">
		<mkdir dir="${build.home}" />
		<mkdir dir="${build.home}/WEB-INF" />
		<mkdir dir="${build.home}/WEB-INF/classes" />

		<copy todir="${build.home}" overwrite="true">
			<fileset dir="${web.home}">
				<include name="**/*.jsp" />
				<include name="**/*.png" />
				<include name="**/*.css" />
				<include name="**/*.js" />
				<include name="**/*.jpg" />
				<include name="**/*.tld" />
				<include name="**/*.jar" />
				<include name="**/*.jspf" />
			</fileset>
		</copy>

		<copy todir="${web.home}">
			<fileset dir="${web.home}/WEB-INF">
				<include name="*.xml" />
			</fileset>
		</copy>
	</target>


	<target name="War" depends="create">
		<war destfile="${ant.project.name}.war" webxml="${web.home}/web.xml">

			<lib dir="${web.home}/WEB-INF/lib" />
			<classes dir="${build.home}/WEB-INF/classes" />
			<fileset dir="${build.home}" />
		</war>
	</target>


	<target name="Tomcat" depends="War">

		<deploy url="${url}" username="${userid}" password="${userpw}" path="/${ant.project.name}" war="${ant.project.name}.war" update="true" />

		<delete file="${ant.project.name}.war" />

	</target>



</project>




















