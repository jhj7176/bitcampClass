<%

String param1 = new String(request.getParameter("name").getBytes("ISO-8859-1"), "EUC-KR");
String param2 = new String(request.getParameter("pay").getBytes("ISO-8859-1"), "EUC-KR");

if(param1.isEmpty()||param2.isEmpty()){
	response.sendRedirect("error.jsp");
}


String name = param1.trim();
int pay = Integer.parseInt(param2.trim());


		
		
		
String sql = "insert into emp01 values (emp01_seq.nextval,'"+name+"',sysdate,"+pay+")";


try{
	conn = DriverManager.getConnection(url, info);
	stmt = conn.createStatement();
	stmt.executeQuery(sql);
	
	
}catch(Exception e){
	e.printStackTrace();
}finally{
	if(stmt!=null)stmt.close();
	if(conn!=null)conn.close();
}



response.sendRedirect("list.jsp");

%>
