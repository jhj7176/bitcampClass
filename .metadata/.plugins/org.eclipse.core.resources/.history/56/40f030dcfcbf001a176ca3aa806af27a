package com.bit.emp;

import java.util.ArrayList;
import java.sql.*;

public class EmpSQL {
	
	private Connection conn;
	private Statement stmt;
	private ResultSet rs;

	public static ArrayList<EmpDto> list() {

		ArrayList<EmpDto> list = new ArrayList<>();
		String sql = "select * from emp02";

		try {
			conn = com.bit.util.MyOracle.getConnection();
			stmt = conn.createStatement();
			rs = stmt.executeQuery(sql);

			while (rs.next()) {
				EmpDto bean = new EmpDto();
				bean.setSabun(rs.getInt("sabun"));
				bean.setName(rs.getString("name"));
				bean.setHiredate(rs.getDate("hiredate"));
				bean.setPay(rs.getInt("pay"));
				list.add(bean);
			}// while

		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally{
			try {
				if(stmt!=null)stmt.close();
				if(conn!=null)conn.close();
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}//finally

		return list;

	}// list

	
	public void insert(int sabun, String name, int pay){
		String sql = "insert into emp02 values ("+sabun+",'"+name+"',sysdate,"+pay+")";       
		
		
		
	}
	
	
	
	
	
}// EmpSQL
