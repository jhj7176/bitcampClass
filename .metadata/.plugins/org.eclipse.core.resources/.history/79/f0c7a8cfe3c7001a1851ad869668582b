<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">

var id, pw, form;

window.onload=function(){
	form=document.querySelector('form');
	id = document.querySelector('#id');
	form.onsubmit=function(){
		var xhr = new XMLHttpRequest();
		
		xhr.open('get', 'ex02.jsp?id='+id.value+'&pw='+pw.value);
		xhr.send();
		return false; //submit으로 전송안함.
	}
	
	
}//onload
</script>



</head>
<body>


	<div id="header">
		<h1>비트교육센터</h1>
		<form action="ex02.jsp">
			<input type="text" name="id" id="id" /> <input type="text" name="pw" id="pw" /> <input
				type="submit" value="전송">
		</form>
	</div>

</body>
</html>